{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "CONVEX_DEPLOYMENT",
        "CONVEX_URL",
        "CLERK_JWT_ISSUER_DOMAIN",
        "CLERK_WEBHOOK_SECRET",
        "CLERK_SECRET_KEY",
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "NEXT_PUBLIC_ROOT_DOMAIN",
        "NEXT_PUBLIC_CONVEX_URL",
        "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
        "DATABASE_URI",
        "PAYLOAD_SECRET",
        "NEXT_PUBLIC_SERVER_URL",
        "CRON_SECRET",
        "PREVIEW_SECRET",
        "RESEND_API_KEY",
        "PGHOST",
        "POSTGRES_USER",
        "STACK_SECRET_SERVER_KEY",
        "DATABASE_URL",
        "POSTGRES_PASSWORD",
        "POSTGRES_DATABASE",
        "PGPASSWORD",
        "PGDATABASE",
        "PGHOST_UNPOOLED",
        "PGUSER",
        "POSTGRES_URL_NO_SSL",
        "POSTGRES_HOST",
        "NEON_PROJECT_ID",
        "BLOB_READ_WRITE_TOKEN",
        "POSTGRES_URL",
        "POSTGRES_PRISMA_URL",
        "DATABASE_URL_UNPOOLED",
        "POSTGRES_URL_NON_POOLING"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
